@model List<Clothes>
@{
    ViewData["Title"] = "Index";
}
<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="AdminPanel" asp-controller="clothes" asp-action="create">
            Create New Plant
        </a>
    </div>
    @if (TempData["FileName"] != null)
    {
        <div class="alert alert-danger">@TempData["FileName"]</div>
    }
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Text
                    </th>
                    <th>
                       Description
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Clothes clothes in Model)
                {
                    <tr>
                        <td>
                            <img style="width:110px; height:110px"
                                 src="~/assets/img/@clothes.ClothesImages.FirstOrDefault(c=>c.IsMain==true).Name" />
                        </td>
                        <td>
                            @clothes.Name
                        </td>
                        <td>
                            @clothes.Price
                        </td>
                        <td>
                            @clothes.Text
                        </td>
                        <td>
                            @clothes.Description
                        </td>
                        <td class="d-flex align-items-center" style="height:155px">
                            <div>
                                <a asp-area="AdminPanel" asp-controller="Clothes" asp-action="Edit" asp-route-id="@clothes.Id"
                                   class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a asp-area="AdminPanel" asp-controller="Clothes" asp-action="Delete" asp-route-id="@clothes.Id"
                                   class="btn btn-primary"><i class="mdi mdi-delete"></i></a>
                            </div>
                            <div>
                                <a asp-area="AdminPanel" asp-controller="clothes" asp-action="Detail" asp-route-id="@clothes.Id"
                                   class="btn btn-success"><i class="mdi mdi-information"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
