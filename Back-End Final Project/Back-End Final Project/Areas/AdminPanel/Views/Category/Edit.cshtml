@model Category
@{
    ViewData["Title"] = "Edit";
}


<main class="main-panel">
    <h1 style="text-align:center; background-color:grey">Create Slider</h1>
    <div class="my-2">
        <img src="~/assets/img/@Model.Image" />
    </div>
    <form method="post" class="mt-2" enctype="multipart/form-data">
        <div>
            <label>Image:</label><br />
            <input asp-for="Image" class="form-control" /><br />
            <span classs="text-danger" asp-validation-for="Image"></span>
        </div>
        <div>
            <label>Name:</label><br />
            <input asp-for="Name" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div>
            <label>Quantity:</label><br />
            <input asp-for="Quantity" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">
                Update
            </button>
        </div>
    </form>
</main>

