@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="AdminPanel" asp-controller="category" asp-action="create">
            Create New Category
        </a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>                  
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                <tr>
                    <td>
                        @category.Id
                    </td>
                    <td>
                        <img style="width:110px; height:110px" src="~/assets/img/@category.Image" />
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td class="d-flex align-items-center" style="height:155px">
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                               class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                        </div>
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                               class="btn btn-primary"><i class="mdi mdi-delete"></i></a>
                        </div>
                        <div>
                            <a asp-area="AdminPanel" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id"
                               class="btn btn-success"><i class="mdi mdi-information"></i></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

