@model List<Slider>

@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div>
        <a class="btn btn-success" asp-area="AdminPanel" asp-controller="slider" asp-action="create">
            Create New Slider
        </a>
    </div>
    <div class="table-responsive pt-3">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Desc
                    </th>
                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Slider slider in Model)
                {
                    <tr>
                        <td>
                            <img style="width:100px; height:100px" src="~/assets/img/@slider.Image" />
                        </td>
                        <td>
                            @slider.Title
                        </td>
                        <td>
                            @slider.Desc
                        </td>
                        <td class="display-flex">
                            <div>
                                <a asp-area="AdminPanel" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id"
                                   class="btn btn-warning"><i class="mdi mdi-border-color"></i></a>
                            </div>
                            <div>
                                <a asp-area="AdminPanel" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id"
                                   class="btn btn-primary"><i class="mdi mdi-delete"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

