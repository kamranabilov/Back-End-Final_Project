@model Slider
@{
    ViewData["Title"] = "Edit";
}

<main class="main-panel">
    <h1 style="text-align:center; background-color:grey">Create Slider</h1>
    <div class="my-2">
        <img src="~/assets/img/@Model.Image" />
    </div>
    <form method="post" class="mt-2" enctype="multipart/form-data">
        <div>
            <label>Image:</label><br />
            <input asp-for="Picture" class="form-control" /><br />
            <span classs="text-danger" asp-validation-for="Picture"></span>
        </div>       
        <div>
            <label>Title:</label><br />
            <input asp-for="Title" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div>
            <label>Desc:</label><br />
            <input asp-for="Desc" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>
        <div>
            <label>Button:</label><br />
            <input asp-for="ButtonUrl" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="ButtonUrl"></span>
        </div>
        <div>
            <label>Order:</label><br />
            <input asp-for="Order" type="text" class="form-control" /><br />
            <span class="text-danger" asp-validation-for="Order"></span>
        </div>
        <div class="mt-2">
            <button class="btn btn-success" type="submit">
                Update
            </button>
        </div>
    </form>
</main>


